    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>
@if (User.IsInRole("User"))
{
    <p>Questo testo è solo per user</p>
}
else
{
    <p>Non sei autorizzato a vedere Questo testo che è solo per user</p>
}
@if (User.IsInRole("Admin"))
{
    <p>Questo testo è solo per admin</p>
}
else
{
    <p>Non sei autorizzato a vedere Questo testo che è solo per admin</p>
}
