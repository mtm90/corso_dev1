@page
@model ProdottoDettaglio
@{
    ViewData["Title"] = "ProdottoDettaglio";
}

<h1>@ViewData["Title"]</h1>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Dettaglio</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Prodotto.Id</td>
                <td>@Model.Prodotto.Nome</td>
                <td>@Model.Prodotto.Prezzo</td>
                <td>@Model.Prodotto.Dettaglio</td>
            </tr>
        </tbody>
    </table>
    <a asp-page="/Prodotti">Torna a prodotti</a>
</div>
