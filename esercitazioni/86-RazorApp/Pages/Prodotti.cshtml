@page
@model _86_RazorApp.Pages.ProdottiModel
@{
    ViewData["Title"] = "Prodotti";
}
<h1>@ViewData["Title"]</h1>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Prezzo</th>
                <th>Dettaglio</th>
                <th>Immagine</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prodotto in Model.Prodotti) // Model Ã¨ una variabile che contiene i ati e le funnzionalita di quella pagina
                                                      // se vuoi accedere a qualcosa all'interno di model devi specificare che stai prendendo quell'informazione tipo MOdel .Prodotto
            {
                <tr>
                    <td>@prodotto.Nome</td>
                    <td>@prodotto.Prezzo</td>
                    <td>@prodotto.Dettaglio</td>
                    <td><img src="@prodotto.Immagine" alt="@prodotto.Nome" width="100" height="100"></td>
                </tr>
            }
        </tbody>
    </table>
</div>
