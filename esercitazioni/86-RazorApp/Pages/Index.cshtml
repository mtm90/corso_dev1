@page
@model WebAppProdotti.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Container for the homepage content -->
<div class="container mt-5">

    <!-- Header Section -->
    <div class="text-center mb-5">
        <h1 class="display-4">Benvenuto nell'applicazione di Gestione Prodotti</h1>
        <p class="lead">Esplora i nostri prodotti e gestiscili con facilità!</p>
        <p>Questa applicazione è stata costruita con <a href="https://learn.microsoft.com/aspnet/core" target="_blank">ASP.NET Core</a> e consente di visualizzare, modificare e gestire un catalogo prodotti.</p>
    </div>

    <!-- Navigation Buttons -->
    <div class="d-flex justify-content-center mb-4">
        <a asp-page="/Prodotti" class="btn btn-outline-primary btn-lg mx-2">Visualizza Prodotti</a>
        <a asp-page="/AggiungiProdotto" class="btn btn-outline-success btn-lg mx-2">Aggiungi Nuovo Prodotto</a>
    </div>

    <!-- Featured Products Section -->
    <div class="text-center my-5">
        <h2 class="display-5">Prodotti in Evidenza</h2>
        <div class="row mt-4">
            <!-- Loop through each featured product and display it -->
            @foreach (var prodotto in Model.FeaturedProdotti)
            {
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card shadow-sm h-100 w-100">
                        <img src="@prodotto.Immagine" class="card-img-top img-fluid" alt="@prodotto.Nome" style="height: 200px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@prodotto.Nome</h5>
                            <p class="card-text"><strong>Prezzo:</strong> @prodotto.Prezzo €</p>
                            <a asp-page="ProdottoDettaglio" asp-route-id="@prodotto.Id" class="btn btn-outline-info w-100 mt-auto">Visualizza Dettagli</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Footer Section -->
    <div class="text-center mt-5">
        <p class="text-muted">Applicazione costruita utilizzando ASP.NET Core. <br /> © 2024 Gestione Prodotti, Inc.</p>
    </div>

</div>
